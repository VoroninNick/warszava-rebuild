<style>
  .article {
      height: 180px;
      padding-top: 0;
      overflow: hidden;
  }

  .article .article-short-description{
      max-height: 80px;
      overflow: hidden;
  }

  .article .article-title-link{

  }

  .article .article-title-link .article-title{
    max-height: 27px;
    overflow: hidden;
  }

  .article{
      height: auto;
      position: relative;

      margin: 15px 0 15px 25px;
  }

  .article .more-link{
      position: absolute;
      bottom: 0;
      right: 0;
  }


</style>
<% @articles.each do |item| %>
    <div class="article s6 n-max <%= cycle("", "", "pad-n", "pad-n") %>" >
      <% [item.avatar].each do |image| %>
          <% if item && item.page && item.page.respond_to?(:full_path_with_locale) %>
          <%= link_to image_tag(image.url(:thumb), :class => "br f-l"), item.page.full_path_with_locale %>
          <% else %>
            <%= image_tag(image.url(:thumb), :class => "br f-l")  %>
          <% end %>
      <% end %>
      <div class="pad-r">
        <% if item && item.page && item.page.respond_to?(:full_path_with_locale) %>
        <a class="article-title-link" href="<%= item.page.full_path_with_locale %>" title="<%= item.name %>">
          <h3 class="article-title" style="margin-top: -7px;"><%= item.name %></h3>
        </a>
        <% else %>
          <h3 class="article-title" style="margin-top: -7px;"><%= item.name %></h3>
        <% end %>
        <%# @truncate_me = item.description.html_safe unless item.description.blank? %>
        <p class="article-short-description">
          <i>
            <%= raw item.short_descr %>
          </i>
        </p>

        <% if item && item.page && item.page.respond_to?(:full_path_with_locale) %>
        <%= link_to( image_tag("h1-mr.png", :alt => ">"), "#{item.page.full_path_with_locale}", :class => "f-r more-link", :title => "#{item.name}", :style => "margin-top: 0px;") %>
        <% else %>
          <%= image_tag("h1-mr.png", :alt => ">")  %> 
        <% end %>
      </div><!-- class:pad-r -->
    </div><!-- class:s6 n-max -->
<% end %>





