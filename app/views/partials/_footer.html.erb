<footer class="container" id="wide">
  <section class="row">
    <div class="s4 foot-line-up">
      <p><%= t('layout.footer.copyright') %></p>
      <p class="adress-mini">
        <%= t('layout.footer.address') %>
      </p>
    </div>

    <% foot_menu = footer_menu  %>
    <% if foot_menu && foot_menu.menu_items.count > 0 %>
        <div class="s8 foot-line-up" style="margin-left: 62px;">
          <ul id="foot-m">
            <% foot_menu.menu_items.each do |menu_item| %>
                <li>
                  <a href="<%= "/#{params[:locale]}#{menu_item.page.path}" %>" title="<%= menu_item.name.upcase %>"><%= menu_item.name.upcase %></a>
                </li>
            <% end %>

          </ul>
        </div>
    <% end %>
    <div class="push-foot" style="height: 30px;">&nbsp;</div>
    <div class="s4 vs-div foot-line-up">
      <%= image_tag("vs-logo.png", :alt => "") %>
      <p class="vs-studio">
        <%= t('layout.footer.developed-by.handcrafted-in') %>
        <a class="vs-link" href="http://voroninstudio.eu/" title="<%= t('layout.footer.developed-by.voronin-design-studio-link-title') %>">
          <%= t('layout.footer.developed-by.voronin-design-studio') %>
        </a>
        <%= t('layout.footer.developed-by.dot') %>
        <br/>
        <%= t('layout.footer.developed-by.year', date: 2014) %>
        <a class="vs-link" href="http://voroninstudio.eu/" title="<%= t('layout.footer.developed-by.site-info.link.title') %>"><%= t('layout.footer.developed-by.site-info.link.text') %></a>
      </p>
    </div>
    <div class="s8 v-last foot-line-up adress-mini-hide-me-up">
      <p class="f-r">
        <%= t('layout.footer.address') %>
      </p>
    </div>
  </section>
</footer>
